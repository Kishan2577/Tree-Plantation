<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".Register">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="REGISTRATION"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="25dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="30dp"
                android:layout_margin="20dp"
                app:cardElevation="50dp">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profile_person_24" />

                    <Button
                        android:id="@+id/openGalleryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#19916B"
                        android:text="Upload Your Avatar"
                        android:textSize="15sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/border_only"
                        android:drawableStart="@drawable/profile_person_24"
                        android:hint="Enter Name"
                        android:inputType="text"
                        android:id="@+id/name"
                        android:minHeight="48dp"
                        android:paddingStart="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/border_only"
                        android:drawableStart="@drawable/baseline_mail_outline_24"
                        android:hint="Enter Email"
                        android:id="@+id/email"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/border_only"
                        android:drawableStart="@drawable/baseline_key_24"
                        android:hint="Enter Password"
                        android:id="@+id/pass"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/border_only"
                        android:drawableStart="@drawable/profile_call_24"
                        android:hint="Enter Phone"
                        android:id="@+id/phone"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/border_only"
                        android:drawableStart="@drawable/profile_location_24"
                        android:hint="Enter Address"
                        android:id="@+id/address"
                        android:inputType="text"
                        android:minHeight="48dp"
                        android:paddingStart="20dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:backgroundTint="#19916B"
                        android:text="SUBMIT"
                        android:id="@+id/submit"
                        android:textSize="20dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>