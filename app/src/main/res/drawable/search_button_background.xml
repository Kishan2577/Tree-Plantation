<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- Light green shadow color -->
            <corners android:radius="190dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Background layer -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#19916B"
            android:endColor="#43A047" />
            <corners android:radius="1000dp" />
        </shape>
    </item>
</layer-list>
